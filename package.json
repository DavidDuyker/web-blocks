{
  "name": "@yourusername/web-components",
  "version": "0.1.0",
  "description": "A standalone web components library with Storybook documentation",
  "type": "module",
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o storybook-static",
    "preview": "npm run build-storybook && npx http-server storybook-static",
    "serve": "npx http-server . -p 8080 -o examples/index.html",
    "deploy-storybook": "npm run build-storybook && npx gh-pages -d storybook-static"
  },
  "keywords": ["web-components", "vanilla-js", "storybook", "ui-library"],
  "author": "",
  "license": "MIT",
  "main": "src/components/index.js",
  "module": "src/components/index.js",
  "exports": {
    ".": {
      "import": "./src/components/index.js",
      "require": "./src/components/index.js"
    },
    "./button": {
      "import": "./src/components/button/Button.js",
      "require": "./src/components/button/Button.js"
    },
    "./input": {
      "import": "./src/components/input/Input.js",
      "require": "./src/components/input/Input.js"
    },
    "./button.html": "./src/components/button/button.html",
    "./input.html": "./src/components/input/input.html"
  },
  "files": [
    "src/components/**/*",
    "src/styles/**/*",
    "README.md"
  ],
  "devDependencies": {
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/html-vite": "^9.1.10",
    "gh-pages": "^6.1.1",
    "storybook": "^9.1.10"
  }
}
